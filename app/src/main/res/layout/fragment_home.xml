<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true">
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--顶部卡片-->
                <LinearLayout
                    android:background="#DC4138"
                    android:layout_width="match_parent"
                    android:layout_height="173dp">
                    <!--标题与消息-->
                    <RelativeLayout
                        android:layout_marginTop="28dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/fmpText_32px"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:text="退伍军人帮扶系统"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="23dp"
                            android:src="@mipmap/msg_icon"
                            android:layout_width="19dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:gravity="center_horizontal|top"
                            android:background="@drawable/msg_bg"
                            android:textSize="@dimen/fmpWeak1_24px"
                            android:textColor="@color/white"
                            android:text="1"
                            android:layout_width="14dp"
                            android:layout_height="14dp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--banner-->
                <com.youth.banner.Banner
                    android:layout_marginTop="63dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:paddingRight="0dp"
                    android:id="@+id/rv_Menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <!--光荣榜-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <LinearLayout
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:text="光荣榜"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpText_32px"
                    android:textColor="#444444"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:text="更多"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpWeak1_24px"
                    android:textColor="#4B4B4B"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/goin"
                    android:layout_width="4dp"
                    android:layout_height="7dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_guangRongBang"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <!--工作动态-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <LinearLayout
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:text="工作动态"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpText_32px"
                    android:textColor="#444444"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:text="更多"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpWeak1_24px"
                    android:textColor="#4B4B4B"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/goin"
                    android:layout_width="4dp"
                    android:layout_height="7dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gongZuoDongTai"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <!--推荐岗位-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <LinearLayout
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:text="推荐岗位"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpText_32px"
                    android:textColor="#444444"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:text="更多"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpWeak1_24px"
                    android:textColor="#4B4B4B"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/goin"
                    android:layout_width="4dp"
                    android:layout_height="7dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_tuiJianGangWei"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <!--政策公示-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <LinearLayout
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:text="政策公示"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpText_32px"
                    android:textColor="#444444"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:text="更多"
                    android:layout_gravity="center"
                    android:textSize="@dimen/fmpWeak1_24px"
                    android:textColor="#4B4B4B"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/goin"
                    android:layout_width="4dp"
                    android:layout_height="7dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_zhengCeGongShi"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="7dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>