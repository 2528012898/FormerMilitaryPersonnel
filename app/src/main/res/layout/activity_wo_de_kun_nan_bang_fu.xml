<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/pageBg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.person.KunNanBangFuAddActivity">
    <include layout="@layout/public_white_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--姓名-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView

                android:layout_marginTop="10dp"
                android:textColor="#4B4B4B"
                android:textSize="@dimen/fmpOrdinary_26px"
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_name"
                android:text=""
                android:textColor="@color/fmpCommonlyUsed"
                android:textSize="@dimen/fmpWeak1_24px"
                android:textColorHint="#A5A3A3"
                android:hint="姓名"
                android:background="@drawable/kunnanbangfu_et_bg"
                android:maxLines="1"
                android:layout_marginTop="9dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="33dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>
        <!--帮扶事件-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#4B4B4B"
                android:textSize="@dimen/fmpOrdinary_26px"
                android:text="帮扶事件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_event"
                android:text=""
                android:textColor="@color/fmpCommonlyUsed"
                android:textSize="@dimen/fmpWeak1_24px"
                android:textColorHint="#A5A3A3"
                android:hint="帮扶事件"
                android:background="@drawable/kunnanbangfu_et_bg"
                android:maxLines="1"
                android:layout_marginTop="9dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="33dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>
        <!--详情-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#4B4B4B"
                android:textSize="@dimen/fmpOrdinary_26px"
                android:text="详细情况"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:lineSpacingExtra="3.0dp"
                android:id="@+id/tv_description"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:gravity="top"
                android:text=""
                android:textColor="@color/fmpCommonlyUsed"
                android:textSize="@dimen/fmpWeak1_24px"
                android:textColorHint="#A5A3A3"
                android:hint="描述详细情况"
                android:background="@drawable/kunnanbangfu_et_bg"
                android:maxLines="5"
                android:layout_marginTop="9dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="113dp" />
        </LinearLayout>
    </LinearLayout>


    <!--提交-->
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_ok"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:background="@drawable/fmp_red_20radius_bg"
        android:textSize="@dimen/fmpOrdinary_26px"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="提交"
        android:layout_width="167dp"
        android:layout_height="33dp" />
</LinearLayout>