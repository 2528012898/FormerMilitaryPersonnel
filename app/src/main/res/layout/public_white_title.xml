<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center_vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="44dp">
    <ImageView
        android:onClick="click_finishActivity"
        android:id="@+id/iv_back"
        android:layout_width="17dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:padding="5dp"
        android:src="@mipmap/iv_back" />

    <TextView
        android:id="@+id/tv_public_title_title"
        android:textSize="@dimen/fmpImportantTitle_34px"
        android:textColor="@color/publicTitleTextColor"
        android:layout_centerInParent="true"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="21dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_public_title_right"
        android:textSize="@dimen/fmpWeak1_24px"
        android:textColor="#4B4B4B"
        android:layout_centerInParent="true"
        android:text="功能"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>