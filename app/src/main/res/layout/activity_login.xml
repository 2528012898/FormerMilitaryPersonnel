<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/public_white_title"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@mipmap/login_star"
        android:layout_width="69dp"
        android:layout_height="66dp" />

    <ImageView
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/login_star_bottom"
        android:layout_width="169dp"
        android:layout_height="wrap_content" />

    <!--输入框-->
    <LinearLayout
        android:layout_marginTop="52dp"
        android:background="@drawable/login_et_bg"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="34dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/login_tel"
            android:layout_width="15dp"
            android:layout_height="23dp" />
        <EditText
            android:id="@+id/et_tel"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/fmpCommonlyUsed"
            android:textColorHint="@color/regEtHint"
            android:textSize="@dimen/fmpImportant_30px"
            android:hint="请输入手机号"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@drawable/login_et_bg"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="34dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/login_pwd"
            android:layout_width="15dp"
            android:layout_height="23dp" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_pwd"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/fmpCommonlyUsed"
            android:textColorHint="@color/regEtHint"
            android:textSize="@dimen/fmpImportant_30px"
            android:hint="请输入密码"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!--忘记密码 与注册-->
    <LinearLayout
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/fmpImportant_30px"
            android:textColor="#595858"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_reg"
            android:textSize="@dimen/fmpImportant_30px"
            android:textColor="#595858"
            android:text="我要注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:background="@drawable/fmp_red_20radius_bg"
        android:padding="0dp"
        android:textSize="@dimen/fmpImportant_30px"
        android:textColor="@color/white"
        android:text="立即登录"
        android:layout_width="187dp"
        android:layout_height="35dp" />
</LinearLayout>